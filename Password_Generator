##Password Generator
#Will give user new password based on selection
#Will have selections for user to choose from, such as special chars and numbers

#importing modules for use
import random
from tkinter import *
import string 
import math

def numberPassword():
    pasw = True
    while pasw == True:
        print("Please enter the length of the password you would like ")
        length = input()
        passlen = 0
        passlen = int(passlen)
        try:  
            length = int(length)
            length = math.ceil(length)
            password = []
            for i in range(length):
                alpha = random.choice(string.ascii_letters)
                password.append(alpha)
                passlen = len(password)
                if passlen >= length: 
                    print(password)
                    pasw = False
                    break
                symbol = random.choice(string.punctuation)
                password.append(symbol)
                passlen = len(password)
                if passlen >= length:
                    print(password)
                    pasw = False
                    break
                numbers = random.choice(string.digits)
                password.append(numbers)
                passlen = len(password)
                if passlen >= length: 
                    print(password)
                    pasw = False
                    break
            else:
                break
        except ValueError:
            print("This is not a valid number. Try again.")
            continue
numberPassword()
